<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Appearances -->
    <style name="TextAppearance.App.Heading1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/outfitregular</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.App.Heading2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/outfitregular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.App.Heading3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/outfitregular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.App.Paragraph" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/outfitregular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Input Field Style -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">330dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="boxBackgroundColor">@color/input_background</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <!-- Input Field EditText Style -->
    <style name="Widget.App.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/gray_secondary</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/outfitregular</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.App.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/outfitlight</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:layout_width">330sp</item>
        <item name="android:layout_height">55sp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.App.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="fontFamily">@font/outfitlight</item>
        <item name="android:layout_width">330sp</item>
        <item name="android:layout_height">55sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Disabled Button Style -->
    <style name="Widget.App.Button.Disabled" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/outfitlight</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:layout_width">330sp</item>
        <item name="android:layout_height">55sp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:enabled">false</item>
    </style>
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemBackground">@drawable/menu_selected_icon</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@color/white</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSurface">@color/white</item>
    </style>
</resources>